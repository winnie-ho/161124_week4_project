<h1>Restaurants</h1>

<div class ="container">

    <ul class="table_header">
      <li class="table_item"> <img src = "images/icon_restaurant.png" style = "max-width: 10%"/> <h3>Restaurant</h3> </li>
      <li class="table_item"> <img src = "images/icon_address.png" style = "max-width: 10%"/><h3>Address</h3> </li>
      <li class="table_item"> <img src = "images/icon_web.png" style = "max-width: 10%"/><h3>Website</h3> </li>
      <li class="table_item"> <img src = "images/icon_phone.png" style = "max-width: 10%"/><h3>Phone</h3> </li>
      <li class="table_item"> <img src = "images/icon_offer.png" style = "max-width: 10%"/> <h3>Deals</h3></li>
      
    </ul>

    <%for restaurant in @restaurants%>
      <ul class="table_container">
          <li class="restaurant_table_item"> <p> <%= restaurant.name %> </p> </li>
          <li class="restaurant_table_item"> <p> <%= restaurant.address %> </p> </li>
          <li class="restaurant_table_item"> <a style = "font-size: 12px" href = "http://<%= restaurant.web %>"> <%= restaurant.web %> </a> </li>
          <li class="restaurant_table_item"> <p> <%= restaurant.phone%> </p> </li>
          <li class="restaurant_table_item"> <a class = "a_btn" style = "width: 80px" href = "restaurants/<%=restaurant.id%>/burgers"> See Deals</a></li>
      </ul>
    <%end%>
</div>