<h1><%= @restaurant.name %> </h1>
<div class ="container">

<% if @burgers.count == 0 %>
    <h2> <%= @emptys.shuffle[0] %> </h2>
    <h2> at <%= @restaurant.name %> </h2>

<% else %>
<p><%=@burgers.count%> burger deals available</p>

    <ul class="table_header">
      <li class="table_item"> <img src = "/images/icon_burger.png" style = "max-width: 10%"/><h3>Burger</h3> </li>
      <li class="table_item"> <img src = "/images/icon_offer.png" style = "max-width: 10%"/><h3>Deal</h3> </li>
      <li class="table_item"> <img src = "/images/icon_day.png" style = "max-width: 10%"/><h3>Available</h3> </li>
      <li class="table_item"> <img src = "/images/icon_view.png" style = "max-width: 10%"/><h3>View</h3></li>
      <li class="table_item"> <img src = "/images/icon_fave.png" style = "max-width: 10%"/> <h3>Bellyicious</h3></li>
    </ul>

  <%for burger in @burgers%>
    <ul class="table_container">
      <li class="table_item">  <p> <%= burger.name %> </p> </li>
      <li class="table_item">  <p> <%= burger.deal %> </p> </li>
      <li class="table_item">  <p> <%= burger.day_available %> </p> </li>
      <li class="table_item"> <a href = "../../burgers/<%=burger.id%>"> Details</a></li>
      <li class="table_item"> <p> <%= burger.likes %> </p>  
    </ul>
  <%end%>

<%end%>

</div>


